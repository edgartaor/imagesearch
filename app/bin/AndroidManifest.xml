<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tinywebgears.imagesearch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.tinywebgears.imagesearch.view.ItemListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tinywebgears.imagesearch.view.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.tinywebgears.imagesearch.view.ItemListActivityivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ItemListActivity" />
        </activity>

        <provider
            android:name="com.tinywebgears.imagesearch.contentprovider.CommentsContentProvider"
            android:authorities="com.tinywebgears.imagesearch.contentprovider"
            android:exported="false" >
        </provider>
    </application>

</manifest>